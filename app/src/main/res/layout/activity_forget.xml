<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo" />
            <com.docx.farmersupport.customs.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:text="@string/forget_password"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                app:ctypeface="OpenSans-Bold.ttf" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="left|center_vertical">

                    <com.docx.farmersupport.customs.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:drawableRight="@drawable/ic_message"
                        android:gravity="left"
                        android:text="@string/ems"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_8"
                        android:textStyle="bold"
                        app:ctypeface="OpenSans-Semibold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tl_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/reg_text_color"
                        android:textSize="@dimen/sp_8">

                        <com.docx.farmersupport.customs.CustomEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_user_id"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/color_405464"
                            android:textSize="@dimen/sp_8"
                            app:ctypeface="OpenSans-Regular.ttf" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="left|center_vertical">

                    <com.docx.farmersupport.customs.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:drawableRight="@drawable/ic_message"
                        android:gravity="left"
                        android:text="@string/registered_mobile_number"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_8"
                        android:textStyle="bold"
                        app:ctypeface="OpenSans-Semibold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tl_rmobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/reg_text_color"
                        android:textSize="@dimen/sp_8">

                        <com.docx.farmersupport.customs.CustomEditText
                            android:id="@+id/et_rmobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_mobile_number"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColor="@color/color_405464"
                            android:textSize="@dimen/sp_8"
                            app:ctypeface="OpenSans-Regular.ttf" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical">

                    <com.docx.farmersupport.customs.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:drawableRight="@drawable/ic_lock"
                        android:gravity="left"
                        android:text="@string/old_password"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_8"
                        android:textStyle="bold"
                        app:ctypeface="OpenSans-Semibold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tl_rpass1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/reg_text_color"
                        android:textSize="@dimen/sp_8">

                        <com.docx.farmersupport.customs.CustomEditText
                            android:id="@+id/et_rpass1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:imeOptions="actionNext"
                            android:inputType="numberPassword"
                            android:textColor="@color/color_405464"
                            android:textSize="@dimen/sp_8"
                            app:ctypeface="OpenSans-Regular.ttf" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical">

                    <com.docx.farmersupport.customs.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:drawableRight="@drawable/ic_lock"
                        android:gravity="left"
                        android:text="@string/new_password"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_8"
                        android:textStyle="bold"
                        app:ctypeface="OpenSans-Semibold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tl_rpass2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/reg_text_color"
                        android:textSize="@dimen/sp_8">

                        <com.docx.farmersupport.customs.CustomEditText
                            android:id="@+id/et_rpass2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:imeOptions="actionNext"
                            android:inputType="numberPassword"
                            android:textColor="@color/color_405464"
                            android:textSize="@dimen/sp_8"
                            app:ctypeface="OpenSans-Regular.ttf" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>


            <com.docx.farmersupport.customs.CustomButton
                android:layout_margin="@dimen/dp_3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:padding="@dimen/dp_3"
                android:textColor="@color/white"
                android:id="@+id/btn_register"
                android:textSize="@dimen/sp_7"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                app:ctypeface="OpenSans-Regular.ttf"
                android:text="@string/submit" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>