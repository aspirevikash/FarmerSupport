<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_3"
        app:elevation="@dimen/dp_5"
        card_view:cardCornerRadius="@dimen/dp_1">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center|center_vertical"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/sponsor"
                android:clickable="true"
                android:scaleType="fitXY" />


            <com.docx.farmersupport.customs.CustomTextView
                android:layout_marginTop="@dimen/dp_2"
                android:padding="@dimen/dp_2"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:gravity="center_vertical|center"
                android:paddingLeft="@dimen/dp_3"
                android:text="Sponsors Farming"
                android:textAllCaps="false"
                android:textColor="@color/color_435464"
                android:textSize="@dimen/sp_6"
                android:textStyle="bold"
                app:ctypeface="OpenSans-Bold.ttf" />



        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>