<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/my_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_2">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/dp_2"
            app:elevation="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:padding="1dp"
                    android:id="@+id/imageView3"
                    android:scaleType="fitCenter"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/pp_dummy" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_5"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_views" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_3"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_edit" />

                    </LinearLayout>

                    <com.docx.farmersupport.customs.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_toEndOf="@+id/imageView3"
                        android:ellipsize="end"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:text="Vikash Kumar"
                        android:textAllCaps="false"
                        android:textColor="@color/color_435464"
                        android:textSize="@dimen/sp_7"
                        android:textStyle="bold"
                        app:ctypeface="OpenSans-Semibold.ttf" />

                    <com.docx.farmersupport.customs.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_toEndOf="@+id/imageView3"
                        android:drawableLeft="@drawable/ic_message"
                        android:drawablePadding="@dimen/dp_3"
                        android:gravity="left|center"
                        android:text="vikash_vk@nsbbpo.in"
                        android:textAllCaps="false"
                        android:textColor="@color/color_435464"
                        android:textSize="@dimen/sp_6"
                        android:textStyle="normal"
                        app:ctypeface="OpenSans-Semibold.ttf" />

                    <com.docx.farmersupport.customs.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_toEndOf="@+id/imageView3"
                        android:drawableLeft="@drawable/ic_call_24dp"
                        android:drawablePadding="@dimen/dp_3"
                        android:ellipsize="end"
                        android:gravity="left|center"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:text="8888888888"
                        android:textAllCaps="false"
                        android:textColor="@color/color_435464"
                        android:textSize="@dimen/sp_6"
                        android:textStyle="normal"
                        app:ctypeface="OpenSans-Semibold.ttf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_2"
                        android:background="@color/color_8ED62B" />

                    <com.docx.farmersupport.customs.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_toEndOf="@+id/imageView3"
                        android:drawableLeft="@drawable/ic_add_location_black_24dp"
                        android:drawablePadding="@dimen/dp_3"
                        android:ellipsize="end"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:text="New Delhi"
                        android:textAllCaps="false"
                        android:textColor="@color/color_435464"
                        android:textSize="@dimen/sp_6"
                        android:textStyle="normal"
                        app:ctypeface="OpenSans-Semibold.ttf" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/dp_2"
                app:elevation="@dimen/dp_5">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            android:background="@color/color_A5ADB6"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_2">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_recipt" />

                            <com.docx.farmersupport.customs.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_toEndOf="@+id/imageView3"
                                android:ellipsize="end"
                                android:gravity="left|center"
                                android:maxLines="1"
                                android:text="Personal"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_7"
                                android:textStyle="bold"
                                app:ctypeface="OpenSans-Semibold.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:background="@drawable/inline_item"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_2">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_recipt" />

                            <com.docx.farmersupport.customs.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_toEndOf="@+id/imageView3"
                                android:ellipsize="end"
                                android:gravity="left|center"
                                android:maxLines="1"
                                android:text="Family  "
                                android:textAllCaps="false"
                                android:textColor="@color/color_435464"
                                android:textSize="@dimen/sp_7"
                                android:textStyle="bold"
                                app:ctypeface="OpenSans-Semibold.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:background="@drawable/inline_item"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_2">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_recipt" />

                            <com.docx.farmersupport.customs.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_toEndOf="@+id/imageView3"
                                android:ellipsize="end"
                                android:gravity="left|center"
                                android:maxLines="1"
                                android:text="Land Details"
                                android:textAllCaps="false"
                                android:textColor="@color/color_435464"
                                android:textSize="@dimen/sp_7"
                                android:textStyle="bold"
                                app:ctypeface="OpenSans-Semibold.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:background="@drawable/inline_item"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_recipt" />

                            <com.docx.farmersupport.customs.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_toEndOf="@+id/imageView3"
                                android:ellipsize="end"
                                android:gravity="left|center"
                                android:maxLines="1"
                                android:text="Animals"
                                android:textAllCaps="false"
                                android:textColor="@color/color_435464"
                                android:textSize="@dimen/sp_7"
                                android:textStyle="bold"
                                app:ctypeface="OpenSans-Semibold.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:background="@drawable/inline_item"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_2">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_recipt" />

                            <com.docx.farmersupport.customs.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_toEndOf="@+id/imageView3"
                                android:ellipsize="end"
                                android:gravity="left|center"
                                android:maxLines="1"
                                android:text="Others   "
                                android:textAllCaps="false"
                                android:textColor="@color/color_435464"
                                android:textSize="@dimen/sp_7"
                                android:textStyle="bold"
                                app:ctypeface="OpenSans-Semibold.ttf" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_margin="@dimen/dp_2"
                android:background="@color/design_default_color_primary"
                android:weightSum="2"
                android:paddingBottom="@dimen/dp_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.docx.farmersupport.customs.CustomButton
                    android:layout_weight="1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_vertical"
                    android:padding="@dimen/dp_3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_6"
                    android:textStyle="bold"
                    android:background="@color/color_A5ADB6"
                    app:ctypeface="OpenSans-Regular.ttf"
                    android:text="View Profile" />
                <com.docx.farmersupport.customs.CustomButton
                    android:layout_weight="1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_vertical"
                    android:padding="@dimen/dp_3"
                    android:textColor="@color/color_435464"
                    android:textSize="@dimen/sp_6"
                    android:textStyle="normal"
                    android:background="@color/white"
                    app:ctypeface="OpenSans-Regular.ttf"
                    android:text="Edit Profile" />

            </LinearLayout>
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/inflator_personal"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>


</LinearLayout>